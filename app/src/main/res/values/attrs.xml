<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TopBar">
        <attr name="title" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="leftText" format="string"/>
        <attr name="leftBackground" format="reference|color"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="rightText" format="string"/>
        <attr name="rightBackground" format="reference|color"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="DragView">
        <attr name="ViewBackground" format="color"/>
        <attr name="width" format="dimension"/>
        <attr name="height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="RippleEffectView">
        <attr name="ripple_width" format="dimension"/>
        <attr name="ripple_color" format="color"/>
        <attr name="ripple_count" format="integer"/>
        <attr name="ripple_radius" format="integer"/>
        <attr name="duration" format="integer"/>
        <attr name="ripple_scale" format="float"/>
        <attr name="ripple_type" format="enum">
            <enum name="fill_type" value="0"/>
            <enum name="stroke_type" value="1"/>
        </attr>
    </declare-styleable>
</resources>